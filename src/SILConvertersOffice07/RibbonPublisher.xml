<?xml version="1.0" encoding="utf-8" ?>
<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui">
  <ribbon>
    <tabs>
      <tab id="SILConvertersAddInPublisher" label="SIL Converters">
        <group id="SILConvertersAddInPublisherGroup" label="SIL Converters">
          <button id="SILConvertersOffice.PubApp.WholeDocumentConvert_Click" label="Convert Whole Document"
            size="large" onAction="Button_Clicked" screentip="Click this item to convert the entire document" />
          <button id="SILConvertersOffice.PubApp.ThisStoryConvert_Click" label="Convert Selected Story"
            size="large" onAction="Button_Clicked" screentip="Click this item to convert the selected story only" />
          <button id="SILConvertersOffice.PubApp.SelectionConvert_Click" label="Convert Selection"
            size="large" onAction="Button_Clicked" screentip="Click this item to convert the selected text only" />
          <button id="SILConvertersOffice.PubApp.Reset_Click" label="Reset"
            size="large" onAction="Button_Clicked" screentip="Reset the unfinished conversion processes" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>