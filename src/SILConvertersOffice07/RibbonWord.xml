  <ribbon>
    <tabs>
      <tab id="SILConvertersAddInWord" label="SIL Converters">
        <group id="SILConvertersAddInWordGroup" label="SIL Converters">
          <button id="SILConvertersOffice.WordApp.SelectionConvert_Click" label="Convert selection"
            size="large" onAction="Button_Clicked" screentip="Click this item to convert the selected text" />
          <button id="SILConvertersOffice.WordApp.FindReplace_Click" label="Regex find/replace"
            size="large" onAction="Button_Clicked" screentip="Click this item to search the document using Regular Expression syntax" />
